<div class="row">
  <div class="col-sm-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>New Area</h1>
      </div>
      <div class="panel-body">
        <%= form_for @area do |f| %>
          <label for="" class="control-label">Name</label>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.submit :save, class: "form-control" %>
        <% end %>
      </div>
    </div>
  </div>
</div>